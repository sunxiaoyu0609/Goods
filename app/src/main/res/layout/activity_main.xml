<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fragment2.MainActivity">
    <LinearLayout
        android:id="@+id/id_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_alignParentBottom="true">
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/shouye"
                android:drawablePadding="10dp"
                android:text="首页"
                android:textColor="@drawable/tab_text"
                android:textSize="10sp"
                android:gravity="center" />
            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/search"
                android:drawablePadding="10dp"
                android:text="搜索"
                android:textColor="@drawable/tab_text"
                android:textSize="10sp"
                android:gravity="center" />
            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/classfy"
                android:drawablePadding="10dp"
                android:text="分类"
                android:textColor="@drawable/tab_text"
                android:textSize="10sp"
                android:gravity="center" />
            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/gouwuche"
                android:drawablePadding="10dp"
                android:text="购物车"
                android:textColor="@drawable/tab_text"
                android:textSize="10sp"
                android:gravity="center" />
            <RadioButton
                android:id="@+id/rb5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/my"
                android:drawablePadding="10dp"
                android:text="我的"
                android:textColor="@drawable/tab_text"
                android:textSize="10sp"
                android:gravity="center" />
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>